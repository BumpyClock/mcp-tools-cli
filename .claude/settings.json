{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/pre_tool_use.py"
          },
          {
            "type": "command",
            "command": "uv run .claude/hooks/send_event.py --source-app project-mcp-manager-cli --event-type PreToolUse --summarize --server-url http://localhost:4000/events"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/post_tool_use.py"
          },
          {
            "type": "command",
            "command": "uv run .claude/hooks/send_event.py --source-app project-mcp-manager-cli --event-type PostToolUse --summarize --server-url http://localhost:4000/events"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/stop.py --chat"
          },
          {
            "type": "command",
            "command": "uv run .claude/hooks/send_event.py --source-app project-mcp-manager-cli --event-type Stop --add-chat --server-url http://localhost:4000/events"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/user_prompt_submit.py --log-only"
          },
          {
            "type": "command",
            "command": "uv run .claude/hooks/send_event.py --source-app project-mcp-manager-cli --event-type UserPromptSubmit --summarize --server-url http://localhost:4000/events"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/subagent_stop.py"
          },
          {
            "type": "command",
            "command": "uv run .claude/hooks/send_event.py --source-app project-mcp-manager-cli --event-type SubagentStop --server-url http://localhost:4000/events"
          }
        ]
      }
    ]
  }
}